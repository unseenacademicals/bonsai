<h1>New user</h1>

<%= form_for @employer, url: api_employers_path do |f| %>

<p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
</p>
<p>
    <%= f.label :latitude %><br>
    <%= f.text_field :latitude %>
</p>
<p>
    <%= f.label :longitude %><br>
    <%= f.text_field :longitude %>
</p>

<p>
    <%= f.submit %>
</p>
<% end %>