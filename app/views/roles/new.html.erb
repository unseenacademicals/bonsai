<h1 id="page-heading">New event</h1>

<%= render 'err' %>

<%= form_for [@trail, @event] do |f| %>

<p>
    <%= f.label :latitude %><br>
    <%= f.text_field :latitude %>
</p>

<p>
    <%= f.label :longitude %><br>
    <%= f.text_field :longitude %>
</p>

<p>
    <%= f.label :link %><br>
    <%= f.text_field :link %>
</p>

<p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
</p>

    <%= f.submit %>
<% end %>

<%= link_to 'Back', trails_path(current_user) %>

