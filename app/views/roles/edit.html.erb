<h1 id="page-heading">Edit role</h1>

<%= form_for [@employer, @role] do |f| %>

<p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
</p>

<p>
    <%= f.label :"badges" %><br>
    <%= f.text_field :badges, multiple: true, value: @role.badges[0] %><br>
    <%= f.text_field :badges, multiple: true, value: @role.badges[1] %><br>
    <%= f.text_field :badges, multiple: true, value: @role.badges[2] %><br>
    <%= f.text_field :badges, multiple: true, value: @role.badges[3] %><br>
    <%= f.text_field :badges, multiple: true, value: @role.badges[4] %><br>
</p>

    <%= f.submit :"Update Role" %>
<% end %>


<%= link_to 'Back', employer_path(@employer) %>